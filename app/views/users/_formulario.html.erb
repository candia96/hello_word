<html>
<head>
	<title>Formulario propio</title>
</head>
<body>
	<%= form_for(@user) do |u| %>
	<div class='field'>
		<% nombres = {'Ramon Candia'=>'Juan', 'Cualquier cosa'=>'cualquiercosa','email'=>'email'} %>	
		<fieldset>
				<% lista = nombres.sort %>
				<%= u.label :nombre  %>
				<%= u.select :nombre, lista  %>
		</fieldset>

	</div>
	<div class='field'>
		<%= u.label :nombre %>
		<%= u.text_field :nombre %>
	</div>
	<div class='field'>
		<%= u.label :bio %>
		<%= u.text_area :bio, :cols=>30, rows: 20 %>
	</div>
	<div class='field'>
		<%= u.label :Programa %>
		<%= u.check_box :programa, checked: "checked" %>
	</div>
	<div class='field'>
		<%= u.label :cumpleanos  %>
		<%= u.date_select :cumpleanos, start_year: 1990, end_year: 2014  %>
	</div>	
<% end %>

<% a= 'hola'  %>
		<% if is_number?(a)  %>
			<b><%= a %></b>
			<% else  %>
				<b>Enviaste palabras</b>
		<% end %>	

</body>
</html>
